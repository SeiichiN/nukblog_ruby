<%# coding: utf-8 %>

<% id = @gazo_newid %>

<article>

  <h1>New gazo</h1>

  <form class="new_gazo" action="setGazoData.rb" method="post" enctype="multipart/form-data">
    <div class="field">
      <label>ID:
        <%= id %>
        <input type="hidden" name="id" value="<%= id %>">
      </label>
    </div>
  
    <div class="field">
      <label>File<br>
        <input type="text" name="filename" id="gazo_file">
      </label>
    </div>
    <div class="field">
      <label>Comment<br>
        <input type="text" name="comment" id="comment">
      </label>
    </div>
    <div class="field image" id="gazo_data">
      <label>Image<br>
        <input type="file" name="file" id="file">
    </div>
    <div class="field btn44aria">
      <label>アップ画像<br>
        <img id="outputList"><br>
        <span id="file_size"></span>
      </label>
    </div>
    <input type="hidden" name="mode" value="new">
    <div class="actions btn44aria">
      <input type="submit" value="アップロード">
    </div>
  </form>
  
  <p class="action">
	<a href="gazolist.rb"><i class="fa fa-list fa-2x"></i></a>
  </p>
  
</article>

<script src="js/file_upload.js"></script>

